<% if @current_user.avatar? %>
  <%= image_tag @current_user.avatar.url(:thumb), class: 'avatar-show' %> 
<% else %>
  <%= gravatar_for @current_user %> 
<% end %>
<h1><%= current_user.name %></h1> 
<span><%= link_to "Посмотреть профиль", current_user %></span> 
